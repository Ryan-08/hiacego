<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuktiPembayaran">
     <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="-8dp"
        android:src="@drawable/rectt13"/>

    <TextView
        android:id="@+id/backAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppinsmed"
        android:text="Upload Bukti Pembayaran"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_height="120dp"
        android:src="@drawable/busdash"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                    android:id="@+id/img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/upload"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="59dp"
                    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Silahkan upload bukti pembayaran"
                android:textAlignment="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_gravity="center_horizontal"
                >
                <Button
                    android:id="@+id/pilihgambar"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Pilih gambar"
                    android:layout_marginHorizontal="20dp"
                    />
                <Button
                    android:id="@+id/uploadgambar"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Upload"
                    android:layout_gravity="end"
                    android:layout_marginHorizontal="20dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</FrameLayout>